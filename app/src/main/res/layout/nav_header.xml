<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/menu_login_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/login"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆后云端到同步学习进度"
        android:textColor="@color/lightgray"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/menu_login_image"
        android:layout_toRightOf="@+id/menu_login_image"
        android:layout_toEndOf="@+id/menu_login_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即登录"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/skyblue"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/menu_login_image"
        android:layout_toRightOf="@+id/menu_login_image"
        android:layout_toEndOf="@+id/menu_login_image" />


</RelativeLayout>
